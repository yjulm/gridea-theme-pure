<script src='//fastly.jsdelivr.net/npm/@waline/client@v2/dist/waline.js'></script>
<link href='//fastly.jsdelivr.net/npm/@waline/client@v2/dist/waline.css' rel='stylesheet' />

<style>
	div#waline{
		width:<%=site.customConfig['vPercentWidth']%>%;
		max-width: <%=site.customConfig['vMaxWidth']%>px;
		padding: <%=site.customConfig['vPadding']%>;
	}
</style>

<% if(site.customConfig['waline']) { %>
	<div id="waline"></div>
<% } %>
<script>
	Waline.init({
		el: '#waline',
		login: 'disable',
		serverURL: '<%=site.customConfig['serverURL']%>',
		pageSize: <%=site.customConfig['pageSize']%>,
		recordIp: <%=site.customConfig['recordIp']%>,
		visitor: <%=site.customConfig['visitor']%>,
		emoji: [
			'//fastly.jsdelivr.net/npm/@waline/emojis@1.0.1/qq',
			'//fastly.jsdelivr.net/npm/@waline/emojis@1.0.1/bilibili',
			'//fastly.jsdelivr.net/npm/@waline/emojis@1.0.1/tw-emoji'
		]
	});
</script>
